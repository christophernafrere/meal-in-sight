generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  recipeIDo UserToRecipe[]
  // createdRecipes   Recipe[]
  
}

model Recipe {
  id  String    @id   @default(uuid())
  title String  @unique
  description String
  alergens  String[]
  regim String[]
  globalCalories  Int //kcal
  globalRate  Int?
  doBy  UserToRecipe[]
  ingredients IngredientOnRecipe[]
  createdAt DateTime  @default(now())
  createdById String 
  imageUrl String
  steps RecipeStep[]
  // createdBy User  @relation(fields: [createdById], references: [id])
}

model RecipeStep {
  id  String  @id   @default(uuid())
  recipeId  String
  recipe  Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  stepNumber  Int
  description String
  imageUrl String?
}

model UserToRecipe {
  userId  String
  recipeId  String
  user  User  @relation(fields: [userId], references: [id])
  recipe  Recipe  @relation(fields: [recipeId], references: [id])
  rate Int? // 0 -> 5
  favorite  Boolean @default(false)
  createdAt DateTime  @default(now())
  imageUrl String
  @@id([userId, recipeId])
}



model Ingredient  {
  id  String  @id   @default(uuid())
  name  String
  description String
  equivalentTo  IngredientEquivalent[] @relation("IngredientToEquivalent")
  equivalentFrom IngredientEquivalent[] @relation("EquivalentToIngredient")
  ingredientOnRecipes  IngredientOnRecipe[]
  type IngredientType?
}

model IngredientOnRecipe {
  recipeId  String  
  ingredientId  String
  recipe  Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)  
  ingredient  Ingredient  @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  quantity  Int
  baseUnity  Unity
  @@id([recipeId, ingredientId])
}

model IngredientEquivalent {
  ingredientId String
  equivalentId  String
  ingredient  Ingredient  @relation("IngredientToEquivalent", fields: [ingredientId], references: [id], onDelete: Cascade)
  equivalent  Ingredient  @relation("EquivalentToIngredient", fields: [equivalentId], references: [id], onDelete: Cascade)
  ratio   Float
  @@id([ingredientId, equivalentId])
}

enum Regim {
  omni
  veggan
  vegetarian
}

enum IngredientType {
  Meat
  Fish
  Vegetable
  Fat
  Crudity
}
enum Unity {
  Gram
  Litter
}